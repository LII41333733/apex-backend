<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender: Logs INFO and above to the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level> <!-- Only log INFO and above to the console -->
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level){FATAL=red bold, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=cyan} [%thread] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for INFO and above -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/info.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/info.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level> <!-- Only capture INFO and above -->
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for DEBUG and above -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level> <!-- Only capture DEBUG and above -->
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for WARN and above (WARN, ERROR, FATAL) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level> <!-- Only capture WARN and above -->
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger: Set the base level to DEBUG to capture all messages -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="INFO_FILE"/>
        <appender-ref ref="DEBUG_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Suppress Hibernate logging -->
    <logger name="org.hibernate" level="off"/>
    <logger name="org.hibernate.SQL" level="off"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="off"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicExtractor" level="off"/>

    <!-- Suppress org.apache.http.wire logging -->
    <logger name="org.apache.http.wire" level="OFF" />
    <logger name="org.apache.http.headers" level="OFF" />

    <!-- Additional suppressions if needed -->
    <logger name="org.apache.http.impl.conn.Wire" level="OFF" />
    <logger name="org.apache.http.impl.conn" level="OFF" />
    <logger name="o.a.h.c.s.SSLConnectionSocketFactory" level="OFF" />
    <logger name="o.a.h.i.c.PoolingHttpClientConnectionManager" level="OFF" />
    <logger name="o.a.h.i.c.DefaultManagedHttpClientConnection" level="OFF" />
    <logger name="o.s.w.s.a.NativeWebSocketSession" level="OFF" />
    <logger name="o.s.w.s.h.LoggingWebSocketHandlerDecorator" level="OFF" />
    <logger name="c.p.apex.component.ClientWebSocket" level="OFF" />
</configuration>
